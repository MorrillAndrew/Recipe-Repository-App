{{> header}}

<main>
	{{> left-navbar}}

  <div class="recipe-workspace">
  		{{> home-page}}

    	{{> contact-page}}

    	{{recipes}}

		<h1 class="recipe-header">List of Recipes:</h1>
		<div class="recipe-list">
			{{#if recipes}}
				{{#each recipes}}
					{{> recipe-icon-title categoryName = ../title}}
				{{/each}}
			{{else}}
				{{#if category}}
					{{#each category}}
						<h3>{{@key}}</h3>
						{{#each this.recipes}}
							<p>{{this.title}}</p>
						{{/each}}
					{{/each}}
				{{/if}}
			{{/if}}

			{{> left-navbar}}
		</div>
	</div>


  <div class="right-frame"></div>

  <div id="search-box">
    <input id="search-box-input" type="text" placeholder="Enter search query...">
  </div>

	{{> google-search}}

</main>

{{> footer}}

<button type="button" class="google-search">Google Search?</button>

{{> create-recipe}}
